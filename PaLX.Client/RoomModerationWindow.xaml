                            <TextBlock Text="ModÃ©ration du Salon" FontSize="17" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock x:Name="RoomNameLabel" Text="Mon Salon" FontSize="11" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right" Click="Close_Click" 
                            Width="32" Height="32" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{DynamicResource SurfaceBrush}" CornerRadius="8">
                                    <TextBlock Text="âœ•" FontSize="14" Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFDDDD"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- LÃ‰GENDE DES RÃ”LES -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="15,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="RÃ´les disponibles :" FontSize="12" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- SuperAdmin -->
                        <Border Background="#9B59B6" CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ‘‘" FontSize="12"/>
                                <TextBlock Text="SuperAdmin" Foreground="White" FontSize="11" 
                                           FontWeight="SemiBold" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Admin -->
                        <Border Background="#E74C3C" CornerRadius="6" Padding="10,5" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="â­" FontSize="12"/>
                                <TextBlock Text="Admin" Foreground="White" FontSize="11" 
                                           FontWeight="SemiBold" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Moderator -->
                        <Border Background="#3498DB" CornerRadius="6" Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”§" FontSize="12"/>
                                <TextBlock Text="ModÃ©rateur" Foreground="White" FontSize="11" 
                                           FontWeight="SemiBold" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- LISTE DES AMIS -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="2" Margin="15,15,15,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search & Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Search Box -->
                        <Border Grid.Column="0" Background="{DynamicResource CardBackgroundBrush}" 
                                CornerRadius="10" Padding="12,8" Margin="0,0,10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
