<Window x:Class="PaLX.Client.RoomModerationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ModÃ©ration du Salon" 
        Height="700" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Couleurs fixes (accents) -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#6C63FF"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F39C12"/>
        
        <!-- Style bouton rÃ´le -->
        <Style x:Key="RoleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style bouton supprimer -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#A93226"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12" 
            BorderBrush="{StaticResource PrimaryBrush}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- HEADER -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                        <TextBlock Text="ðŸ›¡ï¸" FontSize="20" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TitleText" Text="ModÃ©ration du Salon" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" 
                                   Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="40" Height="40" Margin="0,0,8,0"
                            Background="Transparent" 
                            Foreground="{DynamicResource TextSecondaryBrush}" 
                            FontSize="16"
                            BorderThickness="0" Cursor="Hand" Click="Close_Click"/>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- SECTION 1: AMIS DISPONIBLES -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Margin="12,12,12,6" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Titre section -->
                    <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="10,10,0,0" Padding="14,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘¥" FontSize="16"/>
                            <TextBlock Text="Amis disponibles" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="AvailableCountText" Text="(0)" FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Liste des amis disponibles -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                        <ItemsControl x:Name="AvailableFriendsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" 
                                            Margin="0,4" Padding="10,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar -->
                                            <Ellipse Grid.Column="0" Width="36" Height="36">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            
                                            <!-- Nom -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                                <TextBlock Text="{Binding DisplayName}" FontSize="13" 
                                                           FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Text="{Binding Username, StringFormat='@{0}'}" 
                                                           FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            
                                            <!-- Boutons de rÃ´le (visibilitÃ© selon les permissions) -->
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Button Style="{StaticResource RoleButtonStyle}" 
                                                        Background="#9B59B6" ToolTip="SuperAdmin"
                                                        Tag="{Binding}" Click="AssignSuperAdmin_Click"
                                                        Visibility="{Binding SuperAdminButtonVisibility}">
                                                    <TextBlock Text="ðŸ‘‘" FontSize="16"/>
                                                </Button>
                                                <Button Style="{StaticResource RoleButtonStyle}" 
                                                        Background="#E74C3C" ToolTip="Admin"
                                                        Tag="{Binding}" Click="AssignAdmin_Click"
                                                        Visibility="{Binding AdminButtonVisibility}">
                                                    <TextBlock Text="â­" FontSize="16"/>
                                                </Button>
                                                <Button Style="{StaticResource RoleButtonStyle}" 
                                                        Background="#3498DB" ToolTip="ModÃ©rateur"
                                                        Tag="{Binding}" Click="AssignModerator_Click"
                                                        Visibility="{Binding ModeratorButtonVisibility}">
                                                    <TextBlock Text="ðŸ”§" FontSize="16"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Ã‰tat vide -->
                    <TextBlock x:Name="NoAvailableFriendsText" Grid.Row="1" 
                               Text="Tous vos amis ont dÃ©jÃ  un rÃ´le" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"
                               Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- SÃ‰PARATEUR -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="2" Height="2" Background="{StaticResource PrimaryBrush}" 
                    Margin="20,6" Opacity="0.5" CornerRadius="1"/>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- SECTION 2: ADMINISTRATEURS DU SALON -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="3" Background="{DynamicResource SurfaceBrush}" Margin="12,6,12,12" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Titre section -->
                    <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="10,10,0,0" Padding="14,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘‘" FontSize="16"/>
                            <TextBlock Text="Administrateurs du salon" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="AdminsCountText" Text="(0)" FontSize="12" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Liste des administrateurs -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="8">
                        <ItemsControl x:Name="AdminsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Margin="0,4" Padding="10,8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Role}" Value="SuperAdmin">
                                                        <Setter Property="Background" Value="#E8E0F0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                        <Setter Property="Background" Value="#FCE4E4"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Role}" Value="Moderator">
                                                        <Setter Property="Background" Value="#E0F0F8"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar -->
                                            <Ellipse Grid.Column="0" Width="36" Height="36">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            
                                            <!-- Nom -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                                <TextBlock Text="{Binding DisplayName}" FontSize="13" 
                                                           FontWeight="Medium" Foreground="{DynamicResource TextBrush}"/>
                                                <TextBlock Text="{Binding Username, StringFormat='@{0}'}" 
                                                           FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                                            </StackPanel>
                                            
                                            <!-- Badge du rÃ´le -->
                                            <Border Grid.Column="2" CornerRadius="6" Padding="10,4" 
                                                    VerticalAlignment="Center" Margin="0,0,10,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#666"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role}" Value="SuperAdmin">
                                                                <Setter Property="Background" Value="#9B59B6"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="Admin">
                                                                <Setter Property="Background" Value="#E74C3C"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Role}" Value="Moderator">
                                                                <Setter Property="Background" Value="#3498DB"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding RoleDisplayName}" FontSize="11" 
                                                           FontWeight="SemiBold" Foreground="White"/>
                                            </Border>
                                            
                                            <!-- Bouton supprimer (visibilitÃ© selon les permissions) -->
                                            <Button Grid.Column="3" Style="{StaticResource RemoveButtonStyle}"
                                                    ToolTip="Retirer le rÃ´le" Tag="{Binding}" 
                                                    Click="RemoveRole_Click"
                                                    Visibility="{Binding RemoveButtonVisibility}">
                                                <TextBlock Text="âŒ" FontSize="14"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Ã‰tat vide -->
                    <StackPanel x:Name="NoAdminsPanel" Grid.Row="1" 
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="ðŸ‘¤" FontSize="32" HorizontalAlignment="Center" Opacity="0.5"/>
                        <TextBlock Text="Aucun administrateur" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        <TextBlock Text="Cliquez sur ðŸ‘‘ â­ ou ðŸ”§ pour attribuer un rÃ´le" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"
                                   HorizontalAlignment="Center" Margin="0,4,0,0" Opacity="0.7"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
