                                         Foreground="{DynamicResource TextBrush}"
                                         FontSize="13" VerticalAlignment="Center"
                                         TextChanged="SearchBox_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                                <TextBlock x:Name="SearchPlaceholder" Grid.Column="1" 
                                           Text="Rechercher un ami..." FontSize="13"
                                           Foreground="{DynamicResource LightTextBrush}"
                                           VerticalAlignment="Center" IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        
                        <!-- Selection Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Tout sÃ©lectionner" Padding="12,8" FontSize="11"
                                    Background="{DynamicResource SurfaceBrush}" 
                                    Foreground="{DynamicResource TextSecondaryBrush}"
                                    BorderThickness="0" Cursor="Hand" Click="SelectAll_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" 
                                                        Value="{DynamicResource BorderBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Friends List -->
                    <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" 
                            CornerRadius="12" ClipToBounds="True">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="FriendsList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border x:Name="itemBorder" Padding="12,10" 
                                                    BorderBrush="{DynamicResource DividerBrush}" 
                                                    BorderThickness="0,0,0,1" Cursor="Hand">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Checkbox -->
                                                    <CheckBox Grid.Column="0" Style="{StaticResource SelectionCheckBox}"
                                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                              Margin="0,0,12,0" VerticalAlignment="Center"/>
                                                    
                                                    <!-- Avatar -->
                                                    <Border Grid.Column="1" Width="44" Height="44" 
                                                            CornerRadius="22" Margin="0,0,12,0"
                                                            BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2"
                                                            Background="{DynamicResource SurfaceBrush}" ClipToBounds="True">
                                                        <Grid>
                                                            <!-- Default Avatar Icon -->
                                                            <TextBlock Text="ðŸ‘¤" FontSize="20" 
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                            <!-- Actual Avatar Image -->
                                                            <Image Source="{Binding AvatarUrl}" Stretch="UniformToFill"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    
                                                    <!-- Info -->
                                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DisplayName}" FontSize="14" FontWeight="SemiBold"
                                                                   Foreground="{DynamicResource TextBrush}"/>
                                                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                            <TextBlock Text="@" FontSize="11" 
                                                                       Foreground="{DynamicResource LightTextBrush}"/>
                                                        <TextBlock Text="{Binding Username}" FontSize="11" 
                                                                   Foreground="{DynamicResource LightTextBrush}"/>
                                                        <!-- Current Role Badge -->
                                                        <Border x:Name="RoleBadge" CornerRadius="4" Padding="6,2" 
                                                                Margin="8,0,0,0" Visibility="{Binding RoleBadgeVisibility}">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding CurrentRole}" Value="RoomSuperAdmin">
                                                                            <Setter Property="Background" Value="#9B59B6"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding CurrentRole}" Value="RoomAdmin">
                                                                            <Setter Property="Background" Value="#E74C3C"/>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding CurrentRole}" Value="RoomModerator">
                                                                            <Setter Property="Background" Value="#3498DB"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding RoleDisplayName}" FontSize="9" 
                                                                       Foreground="White" FontWeight="SemiBold"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>
                                                
                                                <!-- Role Buttons -->
                                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <!-- SuperAdmin -->
                                                    <Button Style="{StaticResource RoleButtonStyle}"
                                                            ToolTip="SuperAdmin" Tag="{Binding}"
                                                            Click="AssignSuperAdmin_Click">
                                                        <Button.Background>
                                                            <SolidColorBrush Color="#9B59B6" Opacity="{Binding SuperAdminOpacity}"/>
                                                        </Button.Background>
                                                        <TextBlock Text="ðŸ‘‘" FontSize="16"/>
                                                    </Button>
                                                    
                                                    <!-- Admin -->
                                                    <Button Style="{StaticResource RoleButtonStyle}"
                                                            ToolTip="Admin" Tag="{Binding}"
                                                            Click="AssignAdmin_Click">
                                                        <Button.Background>
                                                            <SolidColorBrush Color="#E74C3C" Opacity="{Binding AdminOpacity}"/>
                                                        </Button.Background>
                                                        <TextBlock Text="â­" FontSize="16"/>
                                                    </Button>
                                                    
                                                    <!-- Moderator -->
                                                    <Button Style="{StaticResource RoleButtonStyle}"
                                                            ToolTip="ModÃ©rateur" Tag="{Binding}"
                                                            Click="AssignModerator_Click">
                                                        <Button.Background>
                                                            <SolidColorBrush Color="#3498DB" Opacity="{Binding ModeratorOpacity}"/>
                                                        </Button.Background>
                                                        <TextBlock Text="ðŸ”§" FontSize="16"/>
                                                    </Button>
                                                    
                                                    <!-- Remove Role (for active roles) -->
                                                    <Button Style="{StaticResource RoleButtonStyle}"
                                                            ToolTip="Retirer le rÃ´le" Tag="{Binding}"
                                                            Background="{DynamicResource SurfaceBrush}"
                                                            Click="RemoveRole_Click"
                                                            Visibility="{Binding RemoveButtonVisibility}">
                                                        <TextBlock Text="âŒ" FontSize="14"/>
                                                    </Button>
                                                    
                                                    <!-- Cancel Pending Request -->
                                                    <Button Style="{StaticResource RoleButtonStyle}"
                                                            ToolTip="Annuler la demande en attente" Tag="{Binding}"
                                                            Background="#E67E22"
                                                            Click="CancelRequest_Click"
                                                            Visibility="{Binding CancelButtonVisibility}">
                                                        <TextBlock Text="â¹" FontSize="14"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="itemBorder" Property="Background" 
                                                        Value="{DynamicResource SurfaceBrush}"/>
                                            </Trigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Empty State -->
                        <StackPanel x:Name="EmptyState" Visibility="Collapsed"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                            <TextBlock Text="ðŸ‘¥" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                            <TextBlock Text="Aucun ami trouvÃ©" FontSize="16" 
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="Ajoutez des amis pour leur attribuer des rÃ´les" 
                                       FontSize="12" Foreground="{DynamicResource LightTextBrush}"
                                       HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- FOOTER - ACTIONS -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="3" Background="{DynamicResource CardBackgroundBrush}" 
                    CornerRadius="0,0,16,16" Padding="20,14">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Selection Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="SelectionCount" Text="0 ami(s) sÃ©lectionnÃ©(s)" 
                                   FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>
                    
                    <!-- Bulk Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="BulkAssignButton" Content="ðŸ“¤ Attribuer aux sÃ©lectionnÃ©s" 
                                Padding="16,12" FontSize="13" FontWeight="SemiBold"
                                Background="{StaticResource SuccessBrush}" Foreground="White"
                                BorderThickness="0" Cursor="Hand" Click="BulkAssign_Click"
                                IsEnabled="False" Opacity="0.6">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="10" Padding="{TemplateBinding Padding}"
                                            Opacity="{TemplateBinding Opacity}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
