<UserControl x:Class="PaLX.Client.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="500">
    
    <UserControl.Resources>
        <!-- Input Field Style with Icon -->
        <Style x:Key="InputFieldStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16,4"/>
            <Setter Property="Height" Value="56"/>
        </Style>
    </UserControl.Resources>
    
    <!-- Fade-in Animation -->
    <UserControl.RenderTransform>
        <TranslateTransform Y="30"/>
    </UserControl.RenderTransform>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="30" To="0" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
    <Grid Background="{StaticResource CardBackgroundBrush}">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,35,0,30">
            
            <!-- Username Field -->
            <TextBlock Text="Nom d'utilisateur" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,8"/>
            <Border Style="{StaticResource InputFieldStyle}" Width="380" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#10E03E2F" VerticalAlignment="Center">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBox x:Name="UsernameBox" Grid.Column="1" 
                             Background="Transparent" BorderThickness="0" 
                             FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0"
                             Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Grid.Column="1" Text="Choisissez un username" IsHitTestVisible="False" 
                               Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="12,0,0,0" FontSize="15">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=UsernameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Password Field -->
            <TextBlock Text="Mot de passe" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,8"/>
            <Border Style="{StaticResource InputFieldStyle}" Width="380" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#10E03E2F" VerticalAlignment="Center">
                        <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <PasswordBox x:Name="PasswordBox" Grid.Column="1" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0"
                                 Foreground="{StaticResource TextBrush}" PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBox x:Name="PasswordTxtBox" Grid.Column="1" Visibility="Collapsed"
                             Background="Transparent" BorderThickness="0" 
                             FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0"
                             Foreground="{StaticResource TextBrush}"/>
                    <TextBlock x:Name="PasswordPlaceholder" Grid.Column="1" Text="Créez un mot de passe" IsHitTestVisible="False" 
                               Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="12,0,0,0" FontSize="15"/>
                    
                    <!-- Show/Hide Password Toggle -->
                    <ToggleButton x:Name="ShowPasswordToggle" Grid.Column="2" Width="40" Height="40" 
                                  Background="Transparent" BorderThickness="0" Click="ShowPasswordToggle_Click" Cursor="Hand">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="bg" Background="Transparent" CornerRadius="10">
                                    <TextBlock x:Name="icon" Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                                               Foreground="{StaticResource LightTextBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="icon" Property="Text" Value="&#xED1A;"/>
                                        <Setter TargetName="icon" Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#10000000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </Grid>
            </Border>

            <!-- Confirm Password Field -->
            <TextBlock Text="Confirmer le mot de passe" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,8"/>
            <Border Style="{StaticResource InputFieldStyle}" Width="380" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#10E03E2F" VerticalAlignment="Center">
                        <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <PasswordBox x:Name="ConfirmPasswordBox" Grid.Column="1" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0"
                                 Foreground="{StaticResource TextBrush}" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                    <TextBlock x:Name="ConfirmPasswordPlaceholder" Grid.Column="1" Text="Confirmez le mot de passe" IsHitTestVisible="False" 
                               Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="12,0,0,0" FontSize="15"/>
                </Grid>
            </Border>

            <!-- Register Button -->
            <Button x:Name="RegisterButton" Style="{StaticResource PrimaryButtonStyle}" 
                    Content="Créer mon compte" Click="RegisterButton_Click" 
                    Width="380" Height="56" FontSize="16"/>

            <!-- Divider -->
            <Grid Width="380" Margin="0,20,0,15">
                <Rectangle Height="1" Fill="{StaticResource DividerBrush}"/>
                <Border Background="{StaticResource CardBackgroundBrush}" HorizontalAlignment="Center" Padding="16,0">
                    <TextBlock Text="ou" FontSize="13" Foreground="{StaticResource LightTextBrush}"/>
                </Border>
            </Grid>

            <!-- Login Link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Déjà un compte ? " FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                <Button Style="{StaticResource LinkButtonStyle}" Content="Se connecter" Click="SwitchToLogin_Click" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</UserControl>