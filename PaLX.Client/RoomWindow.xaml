<Window x:Class="PaLX.Client.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Salon de Discussion" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ecf0f1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>   <!-- Chat Area -->
            <ColumnDefinition Width="300"/> <!-- Members Area -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: Chat Area -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Messages -->
                <RowDefinition Height="Auto"/> <!-- Input -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="White" Padding="15" CornerRadius="10" Margin="0,0,0,10">
                <Border.Effect>
                    <DropShadowEffect Color="#bdc3c7" BlurRadius="5" ShadowDepth="1" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="RoomNameText" Text="Nom du Salon" FontSize="22" FontWeight="Bold" Foreground="#1E90FF" VerticalAlignment="Center"/>
                            <Border x:Name="CategoryBadge" Background="#ecf0f1" CornerRadius="4" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="CategoryText" Text="GÃ©nÃ©ral" FontSize="11" Foreground="#7f8c8d" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="CrÃ©Ã© par : " FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="OwnerNameText" Text="Admin" FontSize="12" FontWeight="SemiBold" Foreground="#34495e"/>
                            
                            <TextBlock Text=" â€¢ " FontSize="12" Foreground="Gray" Margin="5,0"/>
                            
                            <TextBlock Text="Ouvert depuis : " FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="UptimeText" Text="00:00" FontSize="12" Foreground="#34495e"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="ðŸ‘¥ " FontSize="12"/>
                            <TextBlock x:Name="TotalCountText" Text="0" FontSize="12" FontWeight="Bold" Margin="0,0,10,0"/>
                            
                            <TextBlock Text="ðŸ‘¨ " FontSize="12"/>
                            <TextBlock x:Name="MenCountText" Text="0" FontSize="12" FontWeight="Bold" Margin="0,0,10,0"/>
                            
                            <TextBlock Text="ðŸ‘© " FontSize="12"/>
                            <TextBlock x:Name="WomenCountText" Text="0" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Grid.Column="1" Click="Leave_Click" Background="Transparent" BorderThickness="0" ToolTip="Quitter le salon">
                        <TextBlock Text="&#xE7E8;" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#e74c3c"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Messages List -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="0,0,0,10">
                <ListView x:Name="MessagesList" BorderThickness="0" Background="Transparent" Margin="5">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <!-- Normal Message -->
                                <Grid Visibility="{Binding BubbleVisibility}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Avatar/Role Color -->
                                    <Border Width="35" Height="35" CornerRadius="17.5" Background="#ecf0f1" Margin="0,0,10,0" VerticalAlignment="Top">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="{Binding RoleColor}"/>
                                        </Border.BorderBrush>
                                        <Border.BorderThickness>
                                            <Thickness Left="2" Top="2" Right="2" Bottom="2"/>
                                        </Border.BorderThickness>
                                        <TextBlock Text="ðŸ‘¤" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                    </Border>

                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="13" Foreground="{StaticResource TextBrush}"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat=HH:mm}" FontSize="10" Foreground="Gray" Margin="10,2,0,0"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="13" Foreground="#34495e"/>
                                    </StackPanel>
                                </Grid>

                                <!-- System Message -->
                                <Border Visibility="{Binding SystemVisibility}" Background="#f9f9f9" CornerRadius="10" Padding="10,5" HorizontalAlignment="Center" Margin="0,5">
                                    <TextBlock Text="{Binding Content}" FontStyle="Italic" Foreground="Gray" FontSize="12"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- Input Area -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Media Actions -->
                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                    <Button Style="{StaticResource IconButtonStyle}" ToolTip="Envoyer une image">
                        <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="Gray"/>
                    </Button>
                </StackPanel>

                <TextBox x:Name="MessageInput" Grid.Column="1" Padding="10" FontSize="14" BorderThickness="0" VerticalContentAlignment="Center">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Button Grid.Column="2" x:Name="SendButton" Click="Send_Click" Margin="10,0,0,0" Width="40" Height="40" Background="{StaticResource PrimaryBrush}" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                    <TextBlock Text="&#xE724;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White"/>
                </Button>
            </Grid>
        </Grid>

        <!-- RIGHT: Members Area -->
        <Border Grid.Column="1" Background="White" BorderThickness="1,0,0,0" BorderBrush="#ecf0f1">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Title -->
                    <RowDefinition Height="*"/>    <!-- List -->
                    <RowDefinition Height="Auto"/> <!-- My Controls -->
                </Grid.RowDefinitions>

                <TextBlock Text="Membres" FontWeight="Bold" FontSize="16" Margin="0,0,0,15" Foreground="{StaticResource TextBrush}"/>

                <!-- Members List -->
                <ListView Grid.Row="1" x:Name="MembersList" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="5" Margin="0,2" Background="Transparent">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar -->
                                    <Grid Margin="0,0,10,0">
                                        <Ellipse Width="32" Height="32" StrokeThickness="2">
                                            <Ellipse.Stroke>
                                                <SolidColorBrush Color="{Binding RoleColor}"/>
                                            </Ellipse.Stroke>
                                            <Ellipse.Fill>
                                                <SolidColorBrush Color="#ecf0f1"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="ðŸ‘¤" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Name & Role -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="13"/>
                                        <TextBlock Text="{Binding RoleName}" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>

                                    <!-- Status Icons -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <!-- Speaking Timer -->
                                        <TextBlock Text="{Binding SpeakingTime}" Foreground="Red" FontSize="11" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>

                                        <!-- Hand Raised -->
                                        <Border Background="#f1c40f" CornerRadius="10" Padding="4" Margin="2,0" Visibility="{Binding HasHandRaised, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="âœ‹" FontSize="10"/>
                                        </Border>
                                        
                                        <!-- Mic On (Animated) -->
                                        <TextBlock Text="&#xE720;" Visibility="{Binding IsMicOn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource StatusIconStyle}">
                                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMicOn}" Value="True">
                                                            <DataTrigger.EnterActions>
                                                                <BeginStoryboard Name="PulseAnim">
                                                                    <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1.0" To="0.4" Duration="0:0:0.8"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </DataTrigger.EnterActions>
                                                            <DataTrigger.ExitActions>
                                                                <StopStoryboard BeginStoryboardName="PulseAnim"/>
                                                            </DataTrigger.ExitActions>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        
                                        <!-- Mic Off -->
                                        <TextBlock Text="&#xE720;" Foreground="Red" Opacity="0.5">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource StatusIconStyle}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsMicOn}" Value="False">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Cam -->
                                        <TextBlock Style="{StaticResource StatusIconStyle}" Text="&#xE960;" Foreground="{StaticResource PrimaryBrush}" Visibility="{Binding IsCamOn, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- Context Menu for Moderation -->
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Voir Profil"/>
                                        <Separator/>
                                        <MenuItem Header="Autoriser la parole" Click="AllowSpeak_Click" Visibility="{Binding CanModerate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <MenuItem Header="Couper Micro" Click="MuteMic_Click" Visibility="{Binding CanModerate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <MenuItem Header="Couper CamÃ©ra" Click="MuteCam_Click" Visibility="{Binding CanModerate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <Separator/>
                                        <MenuItem Header="Expulser" Click="Kick_Click" Foreground="Red" Visibility="{Binding CanModerate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <MenuItem Header="Bannir" Click="Ban_Click" Foreground="Red" Visibility="{Binding CanModerate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- My Controls -->
                <Border Grid.Row="2" Background="#f9f9f9" CornerRadius="10" Padding="10" Margin="0,10,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Speaking Timer (Hidden by default) -->
                        <Border x:Name="SpeakingTimerPanel" Background="#e74c3c" CornerRadius="5" Padding="5" Margin="0,0,0,10" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Temps de parole : " Foreground="White" FontWeight="Bold"/>
                                <TextBlock x:Name="TimerText" Text="00:00" Foreground="White"/>
                            </StackPanel>
                        </Border>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <ToggleButton x:Name="MicToggle" Width="40" Height="40" Margin="5" Click="ToggleMic_Click" Style="{StaticResource {x:Type ToggleButton}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                                            <TextBlock Text="&#xE720;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter Property="Background" Value="#ecf0f1"/>
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ToggleButton x:Name="CamToggle" Width="40" Height="40" Margin="5" Click="ToggleCam_Click">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                                            <TextBlock Text="&#xE960;" FontFamily="Segoe MDL2 Assets" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter Property="Background" Value="#ecf0f1"/>
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ToggleButton x:Name="HandToggle" Width="40" Height="40" Margin="5" Click="ToggleHand_Click">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border CornerRadius="20" Background="{TemplateBinding Background}">
                                            <TextBlock Text="âœ‹" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="Background" Value="#f1c40f"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter Property="Background" Value="#ecf0f1"/>
                                                <Setter Property="Foreground" Value="Gray"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
