<Window x:Class="PaLX.Client.FriendStatusToast"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FriendStatus"
        Width="320"
        Height="Auto"
        SizeToContent="Height"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Animation for slide in from right -->
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetProperty="(Window.Opacity)"
                           From="0" To="1" Duration="0:0:0.35">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetName="ToastBorder"
                               Storyboard.TargetProperty="Margin"
                               From="60,0,0,0" To="0,0,0,0" Duration="0:0:0.35">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
        
        <!-- Animation for slide out -->
        <Storyboard x:Key="SlideOut">
            <DoubleAnimation Storyboard.TargetProperty="(Window.Opacity)"
                           From="1" To="0" Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <ThicknessAnimation Storyboard.TargetName="ToastBorder"
                               Storyboard.TargetProperty="Margin"
                               From="0,0,0,0" To="60,0,0,0" Duration="0:0:0.25">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>
    
    <Border x:Name="ToastBorder"
            CornerRadius="16"
            Margin="0"
            Padding="14,12"
            Background="#FF1E1E1E"
            BorderThickness="2"
            BorderBrush="#FF4CAF50">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="4" Opacity="0.6"/>
        </Border.Effect>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Avatar Container with Status Indicator -->
            <Grid Grid.Column="0" Margin="0,0,12,0">
                <!-- Avatar Circle -->
                <Border Width="48" Height="48" CornerRadius="24" BorderThickness="2" BorderBrush="#FF3D3D3D">
                    <Border.Background>
                        <ImageBrush x:Name="AvatarBrush" Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>
                
                <!-- Placeholder when no avatar -->
                <Border x:Name="AvatarPlaceholder" Width="48" Height="48" CornerRadius="24" 
                        Background="#FF2D2D2D" Visibility="Collapsed">
                    <TextBlock Text="ðŸ‘¤" FontSize="22" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <!-- Online/Offline Status Dot -->
                <Border x:Name="StatusDot" 
                        Width="14" Height="14" 
                        CornerRadius="7"
                        Background="#FF4CAF50"
                        BorderThickness="2"
                        BorderBrush="#FF1E1E1E"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,0"/>
            </Grid>
            
            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="FriendNameText"
                          Text="Nom de l'ami"
                          FontSize="14"
                          FontWeight="SemiBold"
                          Foreground="White"
                          TextTrimming="CharacterEllipsis"
                          MaxWidth="180"/>
                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                    <TextBlock x:Name="StatusIcon" 
                              Text="â—" 
                              FontSize="10" 
                              Foreground="#FF4CAF50"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"/>
                    <TextBlock x:Name="StatusText"
                              Text="est en ligne"
                              FontSize="12"
                              Foreground="#FFAAAAAA"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Close Button -->
            <Button x:Name="CloseButton"
                    Grid.Column="2"
                    Width="24" Height="24"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    VerticalAlignment="Top"
                    Margin="8,0,0,0"
                    Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CloseBorder" 
                                Background="Transparent" 
                                CornerRadius="12">
                            <TextBlock Text="âœ•" 
                                      FontSize="12" 
                                      Foreground="#FF666666"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CloseBorder" Property="Background" Value="#FF333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
