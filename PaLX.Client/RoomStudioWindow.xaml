                                <TextBlock Text="GÃ©rez vos salons" FontSize="12" Foreground="#718096"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Navigation Menu -->
                    <StackPanel Grid.Row="1" Margin="8,0">
                        <TextBlock Text="MENU PRINCIPAL" FontSize="11" FontWeight="Bold" Foreground="#A0AEC0" 
                                   Margin="20,10,0,10"/>
                        
                        <RadioButton x:Name="NavCreate" Content="CrÃ©er un salon" Tag="&#xE710;" 
                                     Style="{StaticResource NavButtonStyle}" IsChecked="True"
                                     Checked="NavButton_Checked"/>
                        
                        <RadioButton x:Name="NavCategories" Content="CatÃ©gories" Tag="&#xE8FD;" 
                                     Style="{StaticResource NavButtonStyle}"
                                     Checked="NavButton_Checked"/>
                        
                        <RadioButton x:Name="NavSubscriptions" Content="Abonnements" Tag="&#xE735;" 
                                     Style="{StaticResource NavButtonStyle}"
                                     Checked="NavButton_Checked"/>

                        <TextBlock Text="MES SALONS" FontSize="11" FontWeight="Bold" Foreground="#A0AEC0" 
                                   Margin="20,30,0,10"/>
                        
                        <RadioButton x:Name="NavMyRooms" Content="Mes salons" Tag="&#xE80F;" 
                                     Style="{StaticResource NavButtonStyle}"
                                     Checked="NavButton_Checked"/>
                        
                        <RadioButton x:Name="NavSettings" Content="ParamÃ¨tres" Tag="&#xE713;" 
                                     Style="{StaticResource NavButtonStyle}"
                                     Checked="NavButton_Checked"/>
                    </StackPanel>

                    <!-- User Info / Close Button -->
                    <StackPanel Grid.Row="2" Margin="16,0,16,20">
                        <Separator Background="#E2E8F0" Margin="0,0,0,16"/>
                        <Button Content="Fermer" Style="{StaticResource SecondaryButtonStyle}" 
                                Click="Close_Click" HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- RIGHT CONTENT AREA                                               -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar with Title & Window Controls -->
                <Border Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid Margin="30,20,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="PageTitle" Text="CrÃ©er un nouveau salon" 
                                       FontSize="26" FontWeight="Bold" Foreground="#1A202C"/>
                            <TextBlock x:Name="PageSubtitle" Text="Configurez votre espace de discussion" 
                                       FontSize="14" Foreground="#718096" Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                            <Button Content="&#xE949;" FontFamily="Segoe MDL2 Assets" 
                                    Width="40" Height="40" Background="Transparent" 
                                    BorderThickness="0" Foreground="#718096" FontSize="12"
                                    Click="Minimize_Click" Cursor="Hand"/>
                            <Button Content="&#xE739;" FontFamily="Segoe MDL2 Assets" 
                                    Width="40" Height="40" Background="Transparent" 
                                    BorderThickness="0" Foreground="#718096" FontSize="12"
                                    Click="Maximize_Click" Cursor="Hand"/>
                            <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" 
                                    Width="40" Height="40" Background="Transparent" 
                                    BorderThickness="0" Foreground="#E53E3E" FontSize="12"
                                    Click="Close_Click" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Pages Container -->
                <Grid Grid.Row="1" Margin="30,10,30,30">
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- PAGE 1: CREATE ROOM                                              -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <ScrollViewer x:Name="PageCreate" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="340"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: Form -->
                            <StackPanel Grid.Column="0" Margin="0,0,30,0">
                                <!-- Room Name -->
                                <TextBlock Text="Nom du salon" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" Margin="0,0,0,8"/>
                                <TextBox x:Name="CreateRoomName" Style="{StaticResource ModernTextBoxStyle}" 
                                         MaxLength="50" Margin="0,0,0,20"/>

                                <!-- Description -->
                                <TextBlock Text="Description" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" Margin="0,0,0,8"/>
                                <TextBox x:Name="CreateRoomDesc" Style="{StaticResource ModernTextBoxStyle}" 
                                         Height="100" TextWrapping="Wrap" AcceptsReturn="True" 
                                         VerticalScrollBarVisibility="Auto" MaxLength="500" Margin="0,0,0,20"/>

                                <!-- Category & SubCategory Row -->
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="CatÃ©gorie" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" Margin="0,0,0,8"/>
                                        <ComboBox x:Name="CreateCategoryCombo" Style="{StaticResource ModernComboBoxStyle}"
                                                  DisplayMemberPath="Name" SelectionChanged="CategoryCombo_SelectionChanged"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Sous-catÃ©gorie" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" Margin="0,0,0,8"/>
                                        <ComboBox x:Name="CreateSubCategoryCombo" Style="{StaticResource ModernComboBoxStyle}"
                                                  DisplayMemberPath="Name"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Max Users Slider -->
                                <TextBlock Text="CapacitÃ© maximale" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" Margin="0,0,0,8"/>
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="CreateMaxUsersSlider" Minimum="5" Maximum="50" Value="25" 
                                            TickFrequency="5" IsSnapToTickEnabled="True" VerticalAlignment="Center"
                                            ValueChanged="MaxUsersSlider_ValueChanged"/>
                                    <Border Grid.Column="1" Background="#EDF2F7" CornerRadius="10" Padding="12,8" Margin="10,0,0,0">
                                        <TextBlock x:Name="CreateMaxUsersText" Text="25" FontWeight="Bold" 
                                                   FontSize="16" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                                    </Border>
                                </Grid>

                                <!-- Options -->
                                <TextBlock Text="Options" FontWeight="SemiBold" FontSize="14" Foreground="#2D3748" Margin="0,0,0,12"/>
                                <Border Background="#F7F9FC" CornerRadius="14" Padding="20" Margin="0,0,0,20">
                                    <StackPanel>
                                        <CheckBox x:Name="CreatePrivateCheck" Margin="0,0,0,12" Checked="PrivateCheck_Changed" Unchecked="PrivateCheck_Changed">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="16" 
                                                           Foreground="#718096" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <TextBlock Text="Salon privÃ© (mot de passe)" FontSize="14" Foreground="#2D3748"/>
                                            </StackPanel>
                                        </CheckBox>
                                        
                                        <Border x:Name="CreatePasswordBorder" Visibility="Collapsed" Margin="28,0,0,12">
                                            <PasswordBox x:Name="CreatePasswordBox" Padding="12,10" FontSize="14"/>
                                        </Border>
                                    </StackPanel>
                                </Border>

                                <!-- Create Button -->
                                <Button x:Name="CreateRoomButton" Content="âœ¨ CrÃ©er le salon" 
                                        Style="{StaticResource ActionButtonStyle}" 
                                        HorizontalAlignment="Left" Click="CreateRoom_Click"/>
                            </StackPanel>

                            <!-- Right: Preview Card -->
                            <Border Grid.Column="1" Style="{StaticResource TierCardStyle}" Padding="24" VerticalAlignment="Top">
                                <StackPanel>
                                    <TextBlock Text="APERÃ‡U" FontSize="11" FontWeight="Bold" Foreground="#A0AEC0" 
                                               Margin="0,0,0,16"/>
                                    
                                    <!-- Preview Room Card -->
                                    <Border Background="#F7F9FC" CornerRadius="16" Padding="20">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10" Padding="10">
                                                    <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" 
                                                               FontSize="18" Foreground="White"/>
                                                </Border>
                                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock x:Name="PreviewRoomName" Text="Mon Salon" 
                                                               FontSize="16" FontWeight="Bold" Foreground="#1A202C"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                                    <TextBlock x:Name="PreviewCategory" Text="CatÃ©gorie" 
                                                               FontSize="12" Foreground="#718096"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <TextBlock x:Name="PreviewDesc" Text="Description du salon..." 
                                                       FontSize="13" Foreground="#4A5568" TextWrapping="Wrap" 
                                                       MaxHeight="60" TextTrimming="CharacterEllipsis"/>
                                            
                                            <Separator Background="#E2E8F0" Margin="0,16"/>
                                            
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="CapacitÃ©" FontSize="11" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                                                    <TextBlock x:Name="PreviewCapacity" Text="0/25" FontSize="16" FontWeight="Bold" 
                                                               Foreground="#2D3748" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                    <TextBlock Text="Niveau" FontSize="11" Foreground="#A0AEC0" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Basic" FontSize="16" FontWeight="Bold" 
                                                               Foreground="#95A5A6" HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <Separator Background="#E2E8F0" Margin="0,20"/>

                                    <!-- Basic Tier Info -->
                                    <StackPanel>
                                        <TextBlock Text="NIVEAU BASIC INCLUS" FontSize="11" FontWeight="Bold" 
                                                   Foreground="#A0AEC0" Margin="0,0,0,12"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="âœ“" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Text="Jusqu'Ã  50 utilisateurs" FontSize="13" Foreground="#4A5568"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="âœ“" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Text="1 micro simultanÃ©" FontSize="13" Foreground="#4A5568"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="âœ“" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Text="2 camÃ©ras simultanÃ©es" FontSize="13" Foreground="#4A5568"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="âœ“" Foreground="{StaticResource SuccessBrush}" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Text="Gratuit" FontSize="13" Foreground="#4A5568"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>

                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <!-- PAGE 2: CATEGORIES                                               -->
                    <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                    <ScrollViewer x:Name="PageCategories" Visibility="Collapsed" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Categories Grid -->
                            <TextBlock Text="Toutes les catÃ©gories" FontSize="18" FontWeight="SemiBold" 
                                       Foreground="#2D3748" Margin="0,0,0,20"/>
                            
                            <ItemsControl x:Name="CategoriesItemsControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CategoryCardStyle}" 
                                                Width="220" Margin="0,0,16,16" Padding="20"
                                                MouseLeftButtonUp="Category_Click">
                                            <StackPanel>
                                                <Border Width="50" Height="50" CornerRadius="14" Margin="0,0,0,14"
                                                        Background="{Binding Color}">
                                                    <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets" 
                                                               FontSize="22" Foreground="White" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" 
                                                           Foreground="#1A202C" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Description}" FontSize="12" 
                                                           Foreground="#718096" TextTrimming="CharacterEllipsis"
                                                           MaxHeight="36" TextWrapping="Wrap"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                                    <TextBlock Text="{Binding SubCategoryCount}" FontSize="13" 
                                                               FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"/>
                                                    <TextBlock Text=" sous-catÃ©gories" FontSize="13" Foreground="#A0AEC0"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Selected Category SubCategories -->
                            <Border x:Name="SubCategoriesPanel" Visibility="Collapsed" 
                                    Background="#F7F9FC" CornerRadius="20" Padding="24" Margin="0,20,0,0">
                                <StackPanel>
