                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header / Logo -->
                    <StackPanel Grid.Row="0" Margin="24,24,24,20">
                        <StackPanel Orientation="Horizontal">
