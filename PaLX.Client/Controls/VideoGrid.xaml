<UserControl x:Class="PaLX.Client.Controls.VideoGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             Background="Transparent">
    
    <UserControl.Resources>
        <!-- Video Cell Style -->
        <Style x:Key="VideoCellStyle" TargetType="Border">
            <Setter Property="Background" Value="#1A1A2E"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>
        
        <!-- Control Button Style -->
        <Style x:Key="VideoControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#80FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Size Mode Button Style (Radio-like) -->
        <Style x:Key="SizeModeButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="6,3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E03E2F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border x:Name="MainContainer" Background="#252538" CornerRadius="12" Padding="6">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.12" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header avec contrÃ´les de taille -->
            <Border Grid.Row="0" Padding="6,4,6,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Titre et compteur -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“¹" FontSize="14" Margin="0,0,6,0"/>
                        <TextBlock x:Name="HeaderTitle" Text="VidÃ©os en direct" 
                                   FontSize="13" FontWeight="SemiBold" Foreground="White"/>
                        <Border Background="#E03E2F" CornerRadius="8" Padding="6,2" Margin="8,0,0,0">
                            <TextBlock x:Name="CameraCountText" Text="0" FontSize="10" 
                                       Foreground="White" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- SÃ©lecteur de taille (centre) -->
                    <Border Grid.Column="1" Background="#20FFFFFF" CornerRadius="6" 
                            Padding="4,2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton x:Name="SizeMini" Style="{StaticResource SizeModeButtonStyle}" 
                                         GroupName="VideoSize" Click="SizeMode_Click" ToolTip="Mini">
                                <TextBlock Text="S" FontSize="10" FontWeight="Bold" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SizeCompact" Style="{StaticResource SizeModeButtonStyle}" 
                                         GroupName="VideoSize" Click="SizeMode_Click" ToolTip="Compact">
                                <TextBlock Text="M" FontSize="10" FontWeight="Bold" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SizeNormal" Style="{StaticResource SizeModeButtonStyle}" 
                                         GroupName="VideoSize" IsChecked="True" Click="SizeMode_Click" ToolTip="Normal">
                                <TextBlock Text="L" FontSize="10" FontWeight="Bold" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                            <RadioButton x:Name="SizeLarge" Style="{StaticResource SizeModeButtonStyle}" 
                                         GroupName="VideoSize" Click="SizeMode_Click" ToolTip="Grand">
                                <TextBlock Text="XL" FontSize="10" FontWeight="Bold" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}"/>
                            </RadioButton>
                        </StackPanel>
                    </Border>
                    
                    <!-- Boutons de contrÃ´le (droite) -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Plein Ã©cran -->
                        <Button x:Name="FullscreenButton" Style="{StaticResource VideoControlButtonStyle}"
                                Click="FullscreenButton_Click" ToolTip="Plein Ã©cran">
                            <TextBlock x:Name="FullscreenIcon" Text="â›¶" FontSize="12" Foreground="White"/>
                        </Button>
                        
                        <!-- RÃ©duire/Agrandir -->
                        <Button x:Name="CollapseButton" Style="{StaticResource VideoControlButtonStyle}"
                                Click="CollapseButton_Click" ToolTip="RÃ©duire">
                            <TextBlock x:Name="CollapseIcon" Text="â–²" FontSize="10" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Video Grid Container -->
            <Border x:Name="VideoContainer" Grid.Row="1">
                <UniformGrid x:Name="VideoUniformGrid" Rows="1" Columns="1">
                    <!-- Videos will be added dynamically -->
                </UniformGrid>
            </Border>
            
            <!-- Empty State -->
            <Border x:Name="EmptyState" Grid.Row="1" Visibility="Collapsed" 
                    Background="#1A1A2E" CornerRadius="10" Margin="4" Padding="16">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“·" FontSize="28" HorizontalAlignment="Center" Opacity="0.5"/>
                    <TextBlock Text="Aucune camÃ©ra active" FontSize="12" Foreground="#888" 
                               HorizontalAlignment="Center" Margin="0,6,0,0"/>
                    <TextBlock Text="Activez votre camÃ©ra pour commencer" FontSize="10" 
                               Foreground="#666" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
