<UserControl x:Class="PaLX.Client.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    
    <UserControl.Resources>
        <!-- Input Field Style with Icon -->
        <Style x:Key="InputFieldStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="16,4"/>
            <Setter Property="Height" Value="56"/>
        </Style>
    </UserControl.Resources>
    
    <!-- Fade-in Animation -->
    <UserControl.RenderTransform>
        <TranslateTransform Y="30"/>
    </UserControl.RenderTransform>
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6"/>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="30" To="0" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
    <Grid Background="{StaticResource CardBackgroundBrush}">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,40">
            
            <!-- Username Field -->
            <TextBlock Text="Nom d'utilisateur" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,8"/>
            <Border Style="{StaticResource InputFieldStyle}" Width="380" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#10E03E2F" VerticalAlignment="Center">
                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBox x:Name="UsernameBox" Grid.Column="1" 
                             Background="Transparent" BorderThickness="0" 
                             FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0"
                             Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Grid.Column="1" Text="Entrez votre username" IsHitTestVisible="False" 
                               Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="12,0,0,0" FontSize="15">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=UsernameBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- Password Field -->
            <TextBlock Text="Mot de passe" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="4,0,0,8"/>
            <Border Style="{StaticResource InputFieldStyle}" Width="380" Margin="0,0,0,32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Width="40" Height="40" CornerRadius="10" Background="#10E03E2F" VerticalAlignment="Center">
                        <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="18" 
                                   Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <PasswordBox x:Name="PasswordBox" Grid.Column="1" 
                                 Background="Transparent" BorderThickness="0" 
                                 FontSize="15" VerticalAlignment="Center" Margin="12,0,0,0"
                                 Foreground="{StaticResource TextBrush}" PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock x:Name="PasswordPlaceholder" Grid.Column="1" Text="Entrez votre mot de passe" IsHitTestVisible="False" 
                               Foreground="{StaticResource LightTextBrush}" VerticalAlignment="Center" Margin="12,0,0,0" FontSize="15"/>
                </Grid>
            </Border>

            <!-- Login Button -->
            <Button x:Name="LoginButton" Style="{StaticResource PrimaryButtonStyle}" 
                    Content="Se connecter" Click="LoginButton_Click" 
                    Width="380" Height="56" FontSize="16"/>
            
            <!-- Loading Indicator -->
            <StackPanel x:Name="LoadingPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0" Visibility="Collapsed">
                <TextBlock x:Name="LoadingText" Text="Connexion en cours..." FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

            <!-- Divider -->
            <Grid Width="380" Margin="0,32,0,24">
                <Rectangle Height="1" Fill="{StaticResource DividerBrush}"/>
                <Border Background="{StaticResource CardBackgroundBrush}" HorizontalAlignment="Center" Padding="16,0">
                    <TextBlock Text="ou" FontSize="13" Foreground="{StaticResource LightTextBrush}"/>
                </Border>
            </Grid>

            <!-- Register Link -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Pas encore de compte ? " FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                <Button Style="{StaticResource LinkButtonStyle}" Content="CrÃ©er un compte" Click="SwitchToRegister_Click" FontSize="14" FontWeight="SemiBold"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</UserControl>