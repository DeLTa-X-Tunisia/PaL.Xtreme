<Window x:Class="PaLX.Client.CustomConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="260" Width="460"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    
    <Border CornerRadius="20" Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#FAFAFA" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.2" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="20,20,0,0" Padding="24,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#F59E0B" Offset="0"/>
                        <GradientStop Color="#D97706" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="❓" FontSize="28" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="TitleText" Text="Confirmation" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Message -->
            <TextBlock x:Name="MessageText" Grid.Row="1" 
                       Text="Êtes-vous sûr ?" 
                       Foreground="#1A1A2E" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       TextAlignment="Center" FontSize="15" Margin="30,20" LineHeight="24"/>

            <!-- Buttons -->
            <Border Grid.Row="2" Padding="24,0,24,24">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Yes Button -->
                    <Button Content="Oui" Width="120" Height="46" Click="YesButton_Click" Cursor="Hand" Margin="0,0,12,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="14" Background="#10B981">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#10B981" BlurRadius="12" ShadowDepth="0" Opacity="0.3"/>
                                    </Border.Effect>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" FontWeight="SemiBold" FontSize="14" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#059669"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#047857"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <!-- No Button -->
                    <Button Content="Non" Width="120" Height="46" Click="NoButton_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="14" Background="#F0F0F0" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="#6B7280" FontWeight="SemiBold" FontSize="14" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#DCDCDC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>