<Window x:Class="PaLX.Client.CustomConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmation" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" Background="#2D2D30" BorderBrush="#f1c40f" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="❓" FontSize="24" Foreground="#f1c40f" Margin="0,0,10,0"/>
                <TextBlock x:Name="TitleText" Text="Confirmation" FontSize="18" FontWeight="Bold" Foreground="#f1c40f" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="MessageText" Grid.Row="1" 
                       Text="Êtes-vous sûr ?" 
                       Foreground="White" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="14"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Oui" Width="100" Height="30" 
                        Background="#2ecc71" Foreground="White" BorderThickness="0"
                        Click="YesButton_Click" Cursor="Hand" Margin="0,0,10,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Non" Width="100" Height="30" 
                        Background="#e74c3c" Foreground="White" BorderThickness="0"
                        Click="NoButton_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>