<Window x:Class="PaLX.Client.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ParamÃ¨tres" Height="680" Width="420"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="track" Width="44" Height="24" 
                                    Background="#E0E0E0" CornerRadius="12" 
                                    HorizontalAlignment="Left" Cursor="Hand">
                                <Ellipse x:Name="thumb" Width="20" Height="20" 
                                         Fill="White" HorizontalAlignment="Left" 
                                         Margin="2,0,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="track" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Settings Item Style - Compact -->
        <Style x:Key="SettingsItemBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <!-- Main Container -->
    <Border CornerRadius="24" Background="{DynamicResource BackgroundBrush}" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.25"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- HEADER                                                          -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="24,24,0,0" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Height="56">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10" Width="36" Height="36">
                            <TextBlock Text="âš™ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="ParamÃ¨tres" FontSize="17" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0"
                            Width="32" Height="32" Click="CloseButton_Click"
                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{DynamicResource SurfaceBrush}" CornerRadius="8">
                                    <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="11" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- CONTENT - With Scroll                                           -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,16,20,20">
                
                <!-- Section: Apparence -->
                <TextBlock Text="APPARENCE" FontSize="10" FontWeight="Bold" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="4,0,0,8"/>
                
                <!-- Dark Mode Toggle -->
                <Border Style="{StaticResource SettingsItemBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#2D2D48" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                            <TextBlock Text="ðŸŒ™" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Mode Sombre" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="RÃ©duit la fatigue oculaire" FontSize="11" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="DarkModeToggle" Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                  VerticalAlignment="Center" Checked="DarkModeToggle_Changed" Unchecked="DarkModeToggle_Changed"/>
                    </Grid>
                </Border>
                
                <!-- Section: Notifications -->
                <TextBlock Text="NOTIFICATIONS" FontSize="10" FontWeight="Bold" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="4,12,0,8"/>
                
                <!-- Sound Notifications -->
                <Border Style="{StaticResource SettingsItemBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#FFF3E0" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ””" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Sons de notification" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Nouveaux messages" FontSize="11" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="SoundNotificationsToggle" Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                  VerticalAlignment="Center" IsChecked="True"/>
                    </Grid>
                </Border>
                
                <!-- Startup Sound -->
                <Border Style="{StaticResource SettingsItemBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="#E8F5E9" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                            <TextBlock Text="ðŸŽµ" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Son de dÃ©marrage" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <TextBlock Text="Ã€ l'ouverture de l'app" FontSize="11" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <CheckBox x:Name="StartupSoundToggle" Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                  VerticalAlignment="Center" IsChecked="True"/>
                    </Grid>
                </Border>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- Section: Audio & VidÃ©o                                          -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <TextBlock Text="AUDIO &amp; VIDÃ‰O" FontSize="10" FontWeight="Bold" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="4,12,0,8"/>
                
                <!-- Camera & Microphone Test -->
                <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="16" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <!-- Camera Preview Section -->
                        <Grid Margin="0,0,0,14">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#E3F2FD" CornerRadius="8" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="ðŸ“·" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="CamÃ©ra" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock x:Name="CameraStatusText" Text="Non testÃ©e" FontSize="10" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button x:Name="TestCameraButton" Grid.Column="1" Content="Tester" 
                                    Click="TestCamera_Click" Cursor="Hand"
                                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                                    Padding="14,6" FontSize="11" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="btnBorder" Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.85"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        
                        <!-- Camera Preview Box -->
                        <Border x:Name="CameraPreviewBorder" Background="#1A1A1A" CornerRadius="12" 
                                Height="140" Margin="0,0,0,14" ClipToBounds="True">
                            <Grid>
                                <!-- Placeholder when camera is off -->
                                <StackPanel x:Name="CameraPlaceholder" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Border Background="#333" CornerRadius="25" Width="50" Height="50" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ“¹" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Cliquez sur Tester" FontSize="11" Foreground="#888" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Camera Image (when active) -->
                                <Image x:Name="CameraPreviewImage" Stretch="UniformToFill" Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        
                        <!-- Separator -->
                        <Border Height="1" Background="{DynamicResource BorderBrush}" Margin="0,0,0,14"/>
                        
                        <!-- Microphone Section -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#FCE4EC" CornerRadius="8" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="ðŸŽ¤" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Microphone" FontSize="13" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock x:Name="MicStatusText" Text="Non testÃ©" FontSize="10" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button x:Name="TestMicButton" Grid.Column="1" Content="Tester" 
                                    Click="TestMicrophone_Click" Cursor="Hand"
                                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                                    Padding="14,6" FontSize="11" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="btnBorder" Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.85"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        
                        <!-- Microphone Level Meter -->
                        <Grid Height="24" Margin="0,4,0,0">
                            <Border Background="#2D2D2D" CornerRadius="6"/>
                            <Border x:Name="MicLevelBar" CornerRadius="6" HorizontalAlignment="Left" Width="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                        <GradientStop Color="#8BC34A" Offset="0.5"/>
                                        <GradientStop Color="#FFEB3B" Offset="0.75"/>
                                        <GradientStop Color="#FF5722" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock x:Name="MicLevelText" Text="Niveau: --" FontSize="10" Foreground="#AAA"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Section: Ã€ propos -->
                <TextBlock Text="Ã€ PROPOS" FontSize="10" FontWeight="Bold" 
                           Foreground="{DynamicResource TextSecondaryBrush}" 
                           Margin="4,12,0,8"/>
                
                <!-- App Version -->
                <Border Style="{StaticResource SettingsItemBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10" Width="40" Height="40" Margin="0,0,12,0">
                            <TextBlock Text="ðŸ”¥" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="PaL.Xtreme" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{DynamicResource TextBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <TextBlock x:Name="VersionText" Text="v1.5.0" FontSize="11" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text=" â€¢ " Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"/>
                                <TextBlock Text="Â© 2026 Azizi Mounir" FontSize="11" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Close Button at bottom -->
                <Button Content="Fermer" Style="{StaticResource SecondaryButtonStyle}" 
                        HorizontalAlignment="Stretch" Padding="0,12" Margin="0,16,0,0" Click="CloseButton_Click"/>
                
            </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
