<Window x:Class="PaLX.Client.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ParamÃ¨tres" Height="520" Width="720"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="track" Width="44" Height="24" 
                                    Background="#E0E0E0" CornerRadius="12" 
                                    HorizontalAlignment="Left" Cursor="Hand">
                                <Ellipse x:Name="thumb" Width="20" Height="20" 
                                         Fill="White" HorizontalAlignment="Left" 
                                         Margin="2,0,0,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="track" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Settings Item Style - Compact -->
        <Style x:Key="SettingsItemBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <!-- Main Container -->
    <Border CornerRadius="20" Background="{DynamicResource BackgroundBrush}" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.25"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Content -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- HEADER                                                          -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="20,20,0,0" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid Height="50">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="18,0,0,0">
                        <Border Background="{StaticResource PrimaryBrush}" CornerRadius="10" Width="32" Height="32">
                            <TextBlock Text="âš™ï¸" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="ParamÃ¨tres" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{DynamicResource TextBrush}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Close Button -->
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,12,0"
                            Width="30" Height="30" Click="CloseButton_Click"
                            Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{DynamicResource SurfaceBrush}" CornerRadius="8">
                                    <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" 
                                               Foreground="{DynamicResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- CONTENT - Two Columns Layout                                    -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1" Margin="18,14,18,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>      <!-- Left: Settings -->
                    <ColumnDefinition Width="16"/>     <!-- Spacer -->
                    <ColumnDefinition Width="1.3*"/>   <!-- Right: Audio/Video -->
                </Grid.ColumnDefinitions>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- LEFT COLUMN: Apparence, Notifications, Ã€ propos                 -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <StackPanel Grid.Column="0">
                    
                    <!-- Section: Apparence -->
                    <TextBlock Text="APPARENCE" FontSize="9" FontWeight="Bold" 
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="4,0,0,6"/>
                    
                    <!-- Dark Mode Toggle -->
                    <Border Style="{StaticResource SettingsItemBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Background="#2D2D48" CornerRadius="8" Width="34" Height="34" Margin="0,0,10,0">
                                <TextBlock Text="ðŸŒ™" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Mode Sombre" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}"/>
                                <TextBlock Text="RÃ©duit la fatigue oculaire" FontSize="10" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="DarkModeToggle" Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                      VerticalAlignment="Center" Checked="DarkModeToggle_Changed" Unchecked="DarkModeToggle_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Section: Notifications -->
                    <TextBlock Text="NOTIFICATIONS" FontSize="9" FontWeight="Bold" 
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="4,10,0,6"/>
                    
                    <!-- Sound Notifications -->
                    <Border Style="{StaticResource SettingsItemBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Background="#FFF3E0" CornerRadius="8" Width="34" Height="34" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ””" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Sons de notification" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}"/>
                                <TextBlock Text="Nouveaux messages" FontSize="10" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="SoundNotificationsToggle" Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                      VerticalAlignment="Center" IsChecked="True"
                                      Checked="SoundNotificationsToggle_Changed" Unchecked="SoundNotificationsToggle_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Startup Sound -->
                    <Border Style="{StaticResource SettingsItemBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Background="#E8F5E9" CornerRadius="8" Width="34" Height="34" Margin="0,0,10,0">
                                <TextBlock Text="ðŸŽµ" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Son de dÃ©marrage" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}"/>
                                <TextBlock Text="Ã€ l'ouverture de l'app" FontSize="10" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                            
                            <CheckBox x:Name="StartupSoundToggle" Grid.Column="2" Style="{StaticResource ToggleSwitchStyle}"
                                      VerticalAlignment="Center" IsChecked="True"
                                      Checked="StartupSoundToggle_Changed" Unchecked="StartupSoundToggle_Changed"/>
                        </Grid>
                    </Border>
                    
                    <!-- Section: Ã€ propos -->
                    <TextBlock Text="Ã€ PROPOS" FontSize="9" FontWeight="Bold" 
                               Foreground="{DynamicResource TextSecondaryBrush}" Margin="4,10,0,6"/>
                    
                    <!-- App Version -->
                    <Border Style="{StaticResource SettingsItemBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Background="{StaticResource PrimaryBrush}" CornerRadius="8" Width="34" Height="34" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ”¥" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="PaL.Xtreme" FontSize="13" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextBrush}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="VersionText" Text="v1.6.5" FontSize="10" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" â€¢ " Foreground="{DynamicResource TextSecondaryBrush}" FontSize="10"/>
                                    <TextBlock Text="Â© 2026 Azizi Mounir" FontSize="10" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                </StackPanel>
                
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <!-- RIGHT COLUMN: Audio & VidÃ©o                                     -->
                <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
                <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" CornerRadius="14" Padding="14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>  <!-- Title -->
                            <RowDefinition Height="Auto"/>  <!-- Camera header -->
                            <RowDefinition Height="Auto"/>  <!-- Camera selector -->
                            <RowDefinition Height="Auto"/>  <!-- Video quality selector -->
                            <RowDefinition Height="*"/>     <!-- Camera preview -->
                            <RowDefinition Height="Auto"/>  <!-- Separator -->
                            <RowDefinition Height="Auto"/>  <!-- Microphone -->
                            <RowDefinition Height="Auto"/>  <!-- Mic level -->
                        </Grid.RowDefinitions>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="0" Text="AUDIO &amp; VIDÃ‰O" FontSize="9" FontWeight="Bold" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" Margin="2,0,0,10"/>
                        
                        <!-- Camera Header -->
                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#E3F2FD" CornerRadius="8" Width="30" Height="30" Margin="0,0,8,0">
                                    <TextBlock Text="ðŸ“·" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="CamÃ©ra" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock x:Name="CameraStatusText" Text="Non testÃ©e" FontSize="9" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button x:Name="TestCameraButton" Grid.Column="1" Content="Tester" 
                                    Click="TestCamera_Click" Cursor="Hand"
                                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                                    Padding="12,5" FontSize="10" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="btnBorder" Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.85"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        
                        <!-- Camera Selector -->
                        <Grid Grid.Row="2" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="Source :" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="CameraSelector" Grid.Column="1" 
                                      SelectionChanged="CameraSelector_SelectionChanged"
                                      Background="{DynamicResource CardBackgroundBrush}"
                                      Foreground="{DynamicResource TextBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      Padding="8,5" FontSize="10">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Video Quality Selector -->
                        <Grid Grid.Row="3" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="QualitÃ© :" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}" 
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <ComboBox x:Name="VideoQualitySelector" Grid.Column="1" 
                                      SelectionChanged="VideoQualitySelector_SelectionChanged"
                                      Background="{DynamicResource CardBackgroundBrush}"
                                      Foreground="{DynamicResource TextBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"
                                      Padding="8,5" FontSize="10">
                                <ComboBoxItem Content="ðŸ¢ Basse (480p) - Ã‰conomise la bande passante"/>
                                <ComboBoxItem Content="âš–ï¸ Moyenne (540p) - RecommandÃ©"/>
                                <ComboBoxItem Content="ðŸš€ Haute (720p) - Meilleure qualitÃ©"/>
                            </ComboBox>
                        </Grid>
                        
                        <!-- Camera Preview -->
                        <Border Grid.Row="4" x:Name="CameraPreviewBorder" Background="#1A1A1A" CornerRadius="10" 
                                ClipToBounds="True" MinHeight="160">
                            <Grid>
                                <!-- Placeholder when camera is off -->
                                <StackPanel x:Name="CameraPlaceholder" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Border Background="#333" CornerRadius="20" Width="44" Height="44" Margin="0,0,0,6">
                                        <TextBlock Text="ðŸ“¹" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Cliquez sur Tester" FontSize="10" Foreground="#888" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Camera Image (when active) -->
                                <Image x:Name="CameraPreviewImage" Stretch="Uniform" Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        
                        <!-- Separator -->
                        <Border Grid.Row="5" Height="1" Background="{DynamicResource BorderBrush}" Margin="0,12,0,10"/>
                        
                        <!-- Microphone Section -->
                        <Grid Grid.Row="6" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#FCE4EC" CornerRadius="8" Width="30" Height="30" Margin="0,0,8,0">
                                    <TextBlock Text="ðŸŽ¤" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Microphone" FontSize="12" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextBrush}"/>
                                    <TextBlock x:Name="MicStatusText" Text="Non testÃ©" FontSize="9" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <Button x:Name="TestMicButton" Grid.Column="1" Content="Tester" 
                                    Click="TestMicrophone_Click" Cursor="Hand"
                                    Background="{StaticResource PrimaryBrush}" Foreground="White"
                                    Padding="12,5" FontSize="10" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="btnBorder" Background="{TemplateBinding Background}" 
                                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.85"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        
                        <!-- Microphone Level Meter -->
                        <Grid Grid.Row="7" Height="22">
                            <Border Background="#2D2D2D" CornerRadius="5"/>
                            <Border x:Name="MicLevelBar" CornerRadius="5" HorizontalAlignment="Left" Width="0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#4CAF50" Offset="0"/>
                                        <GradientStop Color="#8BC34A" Offset="0.5"/>
                                        <GradientStop Color="#FFEB3B" Offset="0.75"/>
                                        <GradientStop Color="#FF5722" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <TextBlock x:Name="MicLevelText" Text="Niveau: --" FontSize="9" Foreground="#AAA"
                                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- FOOTER                                                          -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="2" Margin="18,0,18,14">
                <Button Content="Fermer" Style="{StaticResource SecondaryButtonStyle}" 
                        HorizontalAlignment="Stretch" Padding="0,10" Click="CloseButton_Click"/>
            </Border>
        </Grid>
    </Border>
</Window>
