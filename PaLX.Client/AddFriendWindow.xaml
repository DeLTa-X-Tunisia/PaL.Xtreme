<Window x:Class="PaLX.Client.AddFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PaLX.Client"
        Title="Ajouter des amis" Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        MinHeight="500" MinWidth="400">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Window Control Button -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Container -->
    <Border CornerRadius="20" Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFFFFF" Offset="0"/>
                <GradientStop Color="#F8F9FA" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.15" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" CornerRadius="20,20,0,0" Padding="20,16" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#E03E2F" Offset="0"/>
                        <GradientStop Color="#8B2920" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ‘¥" FontSize="24" Margin="0,0,12,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Ajouter des amis" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource WindowControlButton}" Click="MinimizeButton_Click">
                            <TextBlock Text="&#xE921;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="White"/>
                        </Button>
                        <Button Click="CloseButton_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bg" Background="Transparent" CornerRadius="0,16,0,0" Width="40" Height="32">
                                        <TextBlock Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#E81123"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content -->
            <Grid Grid.Row="1" Margin="20">
        <TabControl x:Name="MainTabControl" Background="Transparent" BorderThickness="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" BorderThickness="0,0,0,2" BorderBrush="Transparent" Margin="0,0,20,0" Padding="10,5" Cursor="Hand">
                                    <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="10,2"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#7f8c8d"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Rechercher">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Search -->
                        <RowDefinition Height="*"/>    <!-- List -->
                    </Grid.RowDefinitions>

                    <!-- Search Bar -->
                    <Border Grid.Row="0" CornerRadius="25" Background="White" Padding="15,10" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect Color="#bdc3c7" BlurRadius="15" ShadowDepth="3" Opacity="0.15"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets" FontSize="18" VerticalAlignment="Center" Foreground="#95a5a6" Margin="0,0,10,0"/>
                            <TextBox x:Name="SearchBox" BorderThickness="0" VerticalContentAlignment="Center" FontSize="16" 
                                     Background="Transparent" Foreground="#34495e"
                                     TextChanged="SearchBox_TextChanged"/>
                            <TextBlock Text="Rechercher un ami..." IsHitTestVisible="False" VerticalAlignment="Center" 
                                       Foreground="#bdc3c7" FontSize="16" Margin="30,0,0,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>

                    <!-- Users List -->
                    <ListView x:Name="UsersList" Grid.Row="1" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="0,0,0,20">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="15" Margin="0,0,0,15" Padding="15">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#bdc3c7" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/> <!-- Avatar -->
                                            <ColumnDefinition Width="*"/>    <!-- Info -->
                                            <ColumnDefinition Width="Auto"/> <!-- Action -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Ellipse Width="55" Height="55" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="0">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="16" Foreground="#2c3e50"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Gender}" FontSize="13" Foreground="#7f8c8d"/>
                                                <TextBlock Text=" â€¢ " FontSize="13" Foreground="#bdc3c7" Visibility="{Binding Gender, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding Age, StringFormat='{}{0} ans'}" FontSize="13" Foreground="#7f8c8d"/>
                                                <TextBlock Text=" â€¢ " FontSize="13" Foreground="#bdc3c7"/>
                                                <TextBlock Text="{Binding Country}" FontSize="13" Foreground="#7f8c8d"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Action Button (Dynamic based on Status) -->
                                        <Grid Grid.Column="2" VerticalAlignment="Center">
                                            <!-- Add Button (Status 2: None) -->
                                            <Button Style="{StaticResource IconButtonStyle}" Click="Add_Click" Tag="{Binding Username}"
                                                    Visibility="{Binding StatusValue, Converter={StaticResource StatusToVisibilityConverter}, ConverterParameter=2}">
                                                <Border Background="{StaticResource PrimaryBrush}" CornerRadius="15" Width="35" Height="35">
                                                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" 
                                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </Button>

                                            <!-- Pending Sent (Status 0) -->
                                            <Border Background="#f1c40f" CornerRadius="15" Width="35" Height="35" ToolTip="Demande envoyÃ©e"
                                                    Visibility="{Binding StatusValue, Converter={StaticResource StatusToVisibilityConverter}, ConverterParameter=0}">
                                                <TextBlock Text="&#xE916;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Already Friend (Status 1) -->
                                            <Border Background="#2ecc71" CornerRadius="15" Width="35" Height="35" ToolTip="Ami"
                                                    Visibility="{Binding StatusValue, Converter={StaticResource StatusToVisibilityConverter}, ConverterParameter=1}">
                                                <TextBlock Text="&#xE73E;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="White" 
                                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Demandes reÃ§ues">
                <Grid Margin="0,20,0,0">
                    <ListView x:Name="RequestsList" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="0,0,0,20">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="15" Margin="0,0,0,15" Padding="15">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#bdc3c7" BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/> <!-- Avatar -->
                                            <ColumnDefinition Width="*"/>    <!-- Info -->
                                            <ColumnDefinition Width="Auto"/> <!-- Actions -->
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Ellipse Width="55" Height="55" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="0">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="16" Foreground="#2c3e50"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock Text="{Binding Gender}" FontSize="13" Foreground="#7f8c8d"/>
                                                <TextBlock Text=" â€¢ " FontSize="13" Foreground="#bdc3c7" Visibility="{Binding Gender, Converter={StaticResource StringToVisibilityConverter}}"/>
                                                <TextBlock Text="{Binding Age, StringFormat='{}{0} ans'}" FontSize="13" Foreground="#7f8c8d"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- View Profile -->
                                            <Button Style="{StaticResource IconButtonStyle}" Width="35" Height="35" Background="#e8f6f3" Margin="0,0,5,0"
                                                    Click="ViewProfile_Click" Tag="{Binding Username}" ToolTip="Voir le profil">
                                                <TextBlock Text="&#xE779;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#3498db"/>
                                            </Button>
                                            <!-- Accept -->
                                            <Button Style="{StaticResource IconButtonStyle}" Width="35" Height="35" Background="#e8f8f5" Margin="0,0,5,0"
                                                    Click="Accept_Click" Tag="{Binding Username}" ToolTip="Accepter (Ajoute l'utilisateur Ã  votre liste)">
                                                <TextBlock Text="&#xE10B;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#2ecc71"/>
                                            </Button>
                                            <!-- Decline -->
                                            <Button Style="{StaticResource IconButtonStyle}" Width="35" Height="35" Background="#fdedec" Margin="0,0,5,0"
                                                    Click="Decline_Click" Tag="{Binding Username}" ToolTip="Refuser">
                                                <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#e74c3c"/>
                                            </Button>
                                            <!-- Block -->
                                            <Button Style="{StaticResource IconButtonStyle}" Width="35" Height="35" Background="#f4f6f6"
                                                    Click="Block_Click" Tag="{Binding Username}" ToolTip="Bloquer">
                                                <TextBlock Text="&#xE728;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#7f8c8d"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>
            </Grid>
        </Grid>
    </Border>
</Window>
