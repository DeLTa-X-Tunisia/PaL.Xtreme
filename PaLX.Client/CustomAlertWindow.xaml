<Window x:Class="PaLX.Client.CustomAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Alerte" Height="200" Width="400"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" Background="#2D2D30" BorderBrush="#F44336" BorderThickness="2">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="⚠️" FontSize="24" Foreground="#F44336" Margin="0,0,10,0"/>
                <TextBlock x:Name="TitleText" Text="Action Non Autorisée" FontSize="18" FontWeight="Bold" Foreground="#F44336" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock x:Name="MessageText" Grid.Row="1" 
                       Text="Vous ne pouvez pas effectuer cette action." 
                       Foreground="White" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="14"/>

            <Button Grid.Row="2" Content="OK" Width="100" Height="30" 
                    Background="#F44336" Foreground="White" BorderThickness="0"
                    Click="OkButton_Click" Cursor="Hand" Margin="0,10,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>