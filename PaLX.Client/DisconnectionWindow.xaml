<Window x:Class="PaLX.Client.DisconnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Déconnexion" Height="220" Width="420"
        WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" Topmost="True">
    <Border CornerRadius="12" Background="#1E1E1E" BorderBrush="#FF9800" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="⚠️" FontSize="28" Foreground="#FF9800" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Connexion Perdue" FontSize="20" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>

            <!-- Message -->
            <TextBlock Grid.Row="1" 
                       Text="La connexion au serveur a été interrompue.&#x0a;Vous avez été déconnecté par sécurité." 
                       Foreground="#DDDDDD" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="14" LineHeight="22"/>

            <!-- Button -->
            <Button Grid.Row="2" Content="Compris" Width="120" Height="36" 
                    Background="#FF9800" Foreground="White" BorderThickness="0"
                    FontSize="14" FontWeight="Medium" Cursor="Hand" Click="CloseButton_Click" Margin="0,15,0,0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="6"/>
                    </Style>
                </Button.Resources>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>