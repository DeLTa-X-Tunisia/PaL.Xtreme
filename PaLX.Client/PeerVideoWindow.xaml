<!-- PeerVideoWindow - FenÃªtre flottante pour visionner la vidÃ©o d'un autre participant -->
<Window x:Class="PaLX.Client.PeerVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="VidÃ©o" 
        Width="360" Height="280"
        MinWidth="280" MinHeight="200"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Topmost="True"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Bouton ContrÃ´le FenÃªtre -->
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#12121A" CornerRadius="12" BorderBrush="#2A2A3E" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>  <!-- Header -->
                <RowDefinition Height="*"/>      <!-- Video -->
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- HEADER - Draggable avec nom utilisateur                          -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="#1A1A2E" CornerRadius="12,12,0,0" Padding="12,8" 
                    MouseDown="Header_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Nom de l'utilisateur -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ“¹" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock x:Name="UsernameText" Text="Utilisateur" FontSize="13" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                        
                        <!-- Badge LIVE -->
                        <Border Background="#E03E2F" CornerRadius="4" Padding="6,2" Margin="10,0,0,0" 
                                VerticalAlignment="Center">
                            <TextBlock Text="LIVE" FontSize="9" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Boutons de contrÃ´le -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Pin -->
                        <Button Style="{StaticResource WindowControlButton}" Click="Pin_Click" ToolTip="Ã‰pingler">
                            <TextBlock x:Name="PinIcon" Text="ðŸ“Œ" FontSize="12"/>
                        </Button>
                        
                        <!-- Fermer -->
                        <Button Style="{StaticResource WindowControlButton}" Click="Close_Click" ToolTip="Fermer" Margin="4,0,0,0">
                            <TextBlock Text="âœ•" FontSize="14" Foreground="#FF6B6B" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- ZONE VIDÃ‰O                                                        -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1" Background="#0D0D14">
                <!-- Image VidÃ©o -->
                <Image x:Name="VideoImage" Stretch="UniformToFill" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Placeholder quand pas de vidÃ©o -->
                <StackPanel x:Name="PlaceholderPanel" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“·" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                    <TextBlock x:Name="StatusText" Text="En attente de la vidÃ©o..." FontSize="12" 
                               Foreground="#666" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Indicateur de chargement -->
                <Border x:Name="LoadingIndicator" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="LoadingRotate" CenterX="16" CenterY="16"/>
                            </TextBlock.RenderTransform>
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                             From="0" To="360" Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>
                        </TextBlock>
                        <TextBlock Text="Connexion..." FontSize="11" Foreground="#888" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Nom en overlay (coin infÃ©rieur gauche) -->
                <Border Background="#CC000000" CornerRadius="6" Padding="10,5" Margin="10"
                        HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock x:Name="OverlayUsername" Text="" FontSize="12" FontWeight="SemiBold" Foreground="White"/>
                </Border>
            </Grid>

            <!-- Grip de redimensionnement -->
            <Path Grid.Row="1" Data="M0,12 L12,0 M4,12 L12,4 M8,12 L12,8" 
                  Stroke="#444" StrokeThickness="1" 
                  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,4,4"/>
        </Grid>
    </Border>
</Window>
