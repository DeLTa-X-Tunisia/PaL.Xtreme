<Window x:Class="PaLX.Admin.InviteFriendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inviter un ami" Height="400" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#1E1E1E">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Sélectionnez un ami à inviter" Foreground="White" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <ListBox x:Name="FriendsList" Background="#252525" BorderThickness="0" Margin="0,0,0,10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse Width="30" Height="30" Margin="0,0,10,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarPath, TargetNullValue='/Assets/default_avatar.png'}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayName}" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Status}" Foreground="#AAA" FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock x:Name="NoFriendsText" Text="Aucun ami disponible pour rejoindre l’appel." Foreground="#AAA" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Visibility="Collapsed"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Click="Cancel_Click" Background="#444" Foreground="White" Padding="10,5" Margin="0,0,10,0" BorderThickness="0"/>
            <Button Content="Inviter" Click="Invite_Click" Background="#4CAF50" Foreground="White" Padding="10,5" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>