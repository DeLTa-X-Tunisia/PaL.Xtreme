<Window x:Class="PaLX.Admin.BlockedUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Utilisateurs bloquÃ©s" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Utilisateurs bloquÃ©s" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource TextBrush}"/>

        <ListView x:Name="BlockedList" Grid.Row="1" BorderThickness="0" Background="Transparent">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="10" Margin="0,0,0,10" Padding="15">
                        <Border.Effect>
                            <DropShadowEffect Color="#bdc3c7" BlurRadius="5" ShadowDepth="1" Opacity="0.1"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Avatar -->
                            <Ellipse Width="50" Height="50" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding AvatarPath}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="16"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Role}" FontSize="12" Foreground="#3498db" FontWeight="Bold" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding BlockPeriodDisplay}" FontSize="12" Foreground="#e74c3c" FontWeight="SemiBold"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Reason}" FontSize="12" Foreground="#95a5a6" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <!-- Actions -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="ðŸ”“" Width="35" Height="35" Margin="0,0,5,0" ToolTip="LibÃ©rer"
                                        Background="#2ecc71" Foreground="White" BorderThickness="0" Click="Unblock_Click" Tag="{Binding Username}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="17.5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <Button Content="âœï¸" Width="35" Height="35" ToolTip="Modifier"
                                        Background="#f1c40f" Foreground="White" BorderThickness="0" Click="Edit_Click" Tag="{Binding}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="17.5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>