<Window x:Class="PaLX.Admin.BlockUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bloquer un utilisateur" Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize"
        WindowStyle="None">
    
    <Border Background="White" CornerRadius="10" Margin="20" Padding="20">
        <Border.Effect>
            <DropShadowEffect Color="#bdc3c7" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Form -->
                <RowDefinition Height="Auto"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Bloquer l'utilisateur" FontSize="18" FontWeight="Bold" Foreground="#e74c3c" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TargetUserText" Text="User" FontSize="14" Foreground="#7f8c8d" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Type de blocage" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="BlockTypeCombo" SelectionChanged="BlockTypeCombo_SelectionChanged" Margin="0,0,0,15">
                    <ComboBoxItem Content="Permanent" Tag="0" IsSelected="True"/>
                    <ComboBoxItem Content="7 Jours" Tag="1"/>
                    <ComboBoxItem Content="Période personnalisée" Tag="2"/>
                </ComboBox>

                <StackPanel x:Name="DateRangePanel" Visibility="Collapsed" Margin="0,0,0,15">
                    <TextBlock Text="Date de fin" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="EndDatePicker"/>
                </StackPanel>

                <TextBlock Text="Raison du blocage" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="ReasonBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Footer -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Annuler" Click="Cancel_Click" Background="Transparent" BorderThickness="0" Foreground="#7f8c8d" Cursor="Hand"/>
                <Button Grid.Column="1" Content="Confirmer" Click="Confirm_Click" Background="#e74c3c" Foreground="White" BorderThickness="0" Padding="10,5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>