<Window x:Class="PaLX.Admin.PublicProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profil Public" Height="450" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#f5f6fa">
    <Border Background="White" Margin="20" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect Color="#bdc3c7" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Avatar -->
                <RowDefinition Height="Auto"/> <!-- Name -->
                <RowDefinition Height="*"/>    <!-- Details -->
                <RowDefinition Height="Auto"/> <!-- Close Button -->
            </Grid.RowDefinitions>

            <!-- Avatar -->
            <Ellipse x:Name="ProfileAvatar" Width="100" Height="100" Margin="0,30,0,10" Stroke="#3498db" StrokeThickness="3">
                <Ellipse.Fill>
                    <SolidColorBrush Color="#ecf0f1"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="AvatarPlaceholder" Text="ðŸ‘¤" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" IsHitTestVisible="False"/>

            <!-- Name -->
            <TextBlock x:Name="DisplayNameText" Grid.Row="1" Text="Nom PrÃ©nom" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2c3e50"/>
            <TextBlock x:Name="UsernameText" Grid.Row="1" Text="@username" FontSize="14" Foreground="#7f8c8d" HorizontalAlignment="Center" Margin="0,30,0,20"/>

            <!-- Details -->
            <StackPanel Grid.Row="2" Margin="30,10">
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸŽ‚ Ã‚ge :" FontWeight="SemiBold" Foreground="#34495e" Width="80"/>
                    <TextBlock x:Name="AgeText" Grid.Column="1" Text="25 ans" Foreground="#2c3e50"/>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="âš§ Genre :" FontWeight="SemiBold" Foreground="#34495e" Width="80"/>
                    <TextBlock x:Name="GenderText" Grid.Column="1" Text="Homme" Foreground="#2c3e50"/>
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="ðŸŒ Pays :" FontWeight="SemiBold" Foreground="#34495e" Width="80"/>
                    <TextBlock x:Name="CountryText" Grid.Column="1" Text="Tunisie" Foreground="#2c3e50"/>
                </Grid>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="3" Content="Fermer" Margin="0,0,0,20" Width="100" Height="35" Background="#e74c3c" Foreground="White" BorderThickness="0" Click="Close_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="17"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>