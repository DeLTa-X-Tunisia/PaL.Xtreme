<Window x:Class="PaLX.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PaL.X Launcher" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#f5f6fa"
        FontFamily="Segoe UI">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#E03E2F"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#2ecc71"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#2c3e50"/>
        
        <Style x:Key="CardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="15" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#bdc3c7" BlurRadius="15" ShadowDepth="3" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#fdfdfd"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#bdc3c7" BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f0f0f0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,40,0,20" HorizontalAlignment="Center">
            <TextBlock Text="PaL.X Launcher" FontSize="32" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
            <TextBlock Text="Gérez votre environnement de développement" FontSize="16" Foreground="#7f8c8d" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Cards -->
        <Grid Grid.Row="1" Margin="40,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- API Card -->
            <Button Grid.Column="0" Style="{StaticResource CardButtonStyle}" Click="Api_Click">
                <StackPanel>
                    <Border Width="80" Height="80" CornerRadius="40" Background="#fff5f5" Margin="0,0,0,15">
                        <TextBlock Text="&#xE82D;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="{StaticResource PrimaryBrush}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="API Server" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ApiStatusText" Text="Arrêté" FontSize="14" Foreground="#95a5a6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <Border x:Name="ApiIndicator" Width="10" Height="10" CornerRadius="5" Background="#95a5a6" Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Admin Card -->
            <Button Grid.Column="1" x:Name="AdminButton" Style="{StaticResource CardButtonStyle}" Click="Admin_Click" IsEnabled="False" ToolTip="En attente du démarrage de l’API…">
                <StackPanel>
                    <Border Width="80" Height="80" CornerRadius="40" Background="#e8f6f3" Margin="0,0,0,15">
                        <TextBlock Text="&#xE7EF;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#1abc9c" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Admin Panel" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="AdminStatusText" Text="En attente API..." FontSize="14" Foreground="#95a5a6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#1abc9c" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Button>

            <!-- Client Card -->
            <Button Grid.Column="2" x:Name="ClientButton" Style="{StaticResource CardButtonStyle}" Click="Client_Click" IsEnabled="False" ToolTip="En attente du démarrage de l’API…">
                <StackPanel>
                    <Border Width="80" Height="80" CornerRadius="40" Background="#eaf2f8" Margin="0,0,0,15">
                        <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#3498db" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Client App" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ClientStatusText" Text="En attente API..." FontSize="14" Foreground="#95a5a6" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#3498db" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="2" Text="PaL.Xtreme © 2025" FontSize="12" Foreground="#bdc3c7" HorizontalAlignment="Center" Margin="0,0,0,20"/>
    </Grid>
</Window>
